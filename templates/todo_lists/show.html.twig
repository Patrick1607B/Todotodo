{% extends 'base.html.twig' %}

{% block title %}TodoLists
{% endblock %}

{% block body %}
	<h2>TodoLists</h2>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ todo_list.id }}</td>
			</tr>
			<tr>
				<th>NameList</th>
				<td>{{ todo_list.nameList }}</td>
			</tr>
			<tr>
				<th>DeadLine</th>
				<td>{{ todo_list.deadLine ? todo_list.deadLine|date('Y-m-d') : '' }}</td>
			</tr>
			<tr>
				<th>Owner</th>
				<td>{{ todo_list.owner.email }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_todo_lists_index') }}">back to list</a>

	<a href="{{ path('app_todo_lists_edit', {'id': todo_list.id}) }}">edit</a>

	{{ include('todo_lists/_delete_form.html.twig') }}
{% endblock %}
