{% extends 'base.html.twig' %}

{% block title %}Tasks{% endblock %}

{% block body %}
    <h2>Tasks</h2>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ task.id }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ task.content }}</td>
            </tr>
            <tr>
                <th>DeadLine</th>
                <td>{{ task.deadLine ? task.deadLine|date('d-m-Y') : '' }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ task.etat }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_tasks_index') }}">back to list</a>

    <a href="{{ path('app_tasks_edit', {'id': task.id}) }}">edit</a>

    {{ include('tasks/_delete_form.html.twig') }}
{% endblock %}
